{
	//
	// FILES
	"files.eol": "\n",
	"files.autoSaveDelay": 500,
	"files.insertFinalNewline": true,
	"files.autoSave": "onFocusChange",
	"files.trimTrailingWhitespace": true,
	"files.hotExit": "onExitAndWindowClose",
	"files.trimFinalNewlines": true,
	//
	// WINDOW
	"window.zoomLevel": 0,
	"window.restoreWindows": "all",
	"window.restoreFullscreen": true,
	"window.titleBarStyle": "custom",
	"workbench.statusBar.visible": true,
	"window.menuBarVisibility": "toggle",
	"window.openFilesInNewWindow": "off",
	"window.openFoldersInNewWindow": "default",
	//
	// WORKBENCH
	"workbench.activityBar.visible": false,
	"workbench.sideBar.location": "left",
	"workbench.iconTheme": "vscode-icons",
	"workbench.startupEditor": "welcomePage",
	"workbench.quickOpen.closeOnFocusLost": true,
	"workbench.statusBar.feedback.visible": false,
	"workbench.commandPalette.preserveInput": true,
	"workbench.editor.enablePreviewFromQuickOpen": true,
	"workbench.settings.editor": "json",
	"workbench.colorCustomizations": {
		// "terminal.foreground": "#bbbbb3",
		// "terminal.background": "#00343f"
	},
	//
	// EDITOR
	"editor.fontSize": 15,
	"editor.fontLigatures": true,
	"editor.fontFamily": "FIRA CODE",
	"editor.cursorStyle": "line",
	"editor.cursorBlinking": "phase",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.renderIndentGuides": true,
	"editor.renderLineHighlight": "all",
	"editor.renderWhitespace": "boundary",
	"editor.scrollBeyondLastLine": true,
	"editor.rulers": [
		80,
		120
	],
	"editor.folding": true,
	"editor.wordWrap": "on",
	"editor.tabCompletion": "on",
	"editor.wrappingIndent": "indent",
	"editor.minimap.side": "right",
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.formatOnPaste": true,
	"editor.insertSpaces": false,
	"editor.autoClosingBrackets": "always",
	"editor.acceptSuggestionOnEnter": "off",
	"editor.suggest.localityBonus": true,
	//
	// TERMINAL
	"terminal.integrated.fontSize": 15,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
	//
	// LANGS::WEB
	"php.validate.run": "onType",
	"markdown.preview.fontSize": 16,
	"html.format.endWithNewline": true,
	"css.lint.duplicateProperties": "warning",
	"html.format.wrapAttributes": "force-aligned",
	//
	// LANGS::GO
	"go.lintFlags": [],
	"go.lintOnSave": "package",
	"go.vetOnSave": "package",
	"go.docsTool": "gogetdoc",
	"go.buildOnSave": "package",
	"go.formatTool": "goreturns",
	"go.lintTool": "revive",
	"go.gopath": "C:\\DAC\\DEV\\go",
	"go.autocompleteUnimportedPackages": true,
	"go.useCodeSnippetsOnFunctionSuggest": true,
	"go.goroot": "~\\scoop\\apps\\go\\current",
	//
	// LANGS::PYTHON
	"python.linting.enabled": true,
	"python.linting.pep8Enabled": true,
	"python.linting.flake8Enabled": true,
	"python.linting.pylintEnabled": false,
	"python.autoComplete.addBrackets": true,
	"python.linting.pydocstyleEnabled": false,
	//
	// LANGS::C++
	"C_Cpp.navigation.length": 80,
	"C_Cpp.dimInactiveRegions": true,
	"C_Cpp.clang_format_style": "file",
	"C_Cpp.intelliSenseEngine": "Default",
	"C_Cpp.workspaceParsingPriority": "highest",
	"C_Cpp.clang_format_sortIncludes": false,
	"C_Cpp.intelliSenseEngineFallback": "Enabled",
	"C_Cpp.clang_format_fallbackStyle": "LLVM",
	"C_Cpp.commentContinuationPatterns": [
		"/**",
		"///",
		"// [ ]",
		"// --> [ ]",
	],
	//
	// LANGS::POWERSHELL
	"[powershell]": {
		"editor.codeLens": false
	},
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.integratedConsole.showOnStartup": false,
	"powershell.powerShellExePath": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
	//
	// LANGS::CSHARP
	"csharp.format.enable": false,
	"csharp.referencesCodeLens.enabled": true,
	//
	// LANGS::GLSL
	"glsllint.glslangValidatorPath": "C:/DAC/BIN/glslangValidator.exe",
	//
	// GIT
	"git.autofetch": true,
	//
	// ZEN MODE
	"zenMode.hideTabs": false,
	"zenMode.centerLayout": false,
	"zenMode.hideStatusBar": true,
	//
	// RAINBOW
	"indentRainbow.colors": [
		"rgba(64,0,64,0.2)",
		"rgba(64,32,16,0.2)"
	],
	"indentRainbow.indentSetter": {
		"cpp": {
			"tabSize": 2,
			"insertSpaces": true
		}
	},
	"indentRainbow.errorColor": "rgba(0,0,0,0)",
	//
	// TELEMETRY
	"telemetry.enableTelemetry": false,
	"telemetry.enableCrashReporter": false,
	//
	// PATH INTELLISENSE
	"path-intellisense.showHiddenFiles": true,
	"path-intellisense.extensionOnImport": true,
	"path-intellisense.autoSlashAfterDirectory": true,
	//
	// LIVE SERVER
	"liveServer.settings.donotShowInfoMsg": true,
	//
	// TODO-HIGHTLIGHT
	"todohighlight.isEnable": true,
	"todohighlight.include": [
		"**/*.js",
		"**/*.jsx",
		"**/*.ts",
		"**/*.tsx",
		"**/*.html",
		"**/*.php",
		"**/*.css",
		"**/*.scss",
		"**/*.go",
		"**/*.cc",
		"**/*.hh"
	],
	//
	// OTHER EXTENSIONS
	"extensions.autoUpdate": true,
	"pasteAndIndent.selectAfter": true,
	"extensions.ignoreRecommendations": false,
	"vsicons.dontShowNewVersionMessage": true,
	"workbench.colorTheme": "Shades of Purple"
}
